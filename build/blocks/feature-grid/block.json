{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "tailwind-starter/feature-grid",
  "version": "1.0.0",
  "title": "Feature Grid",
  "category": "tailwind-starter",
  "icon": "grid-view",
  "description": "Showcase product features and benefits in an organized grid layout",
  "keywords": [
    "features",
    "benefits",
    "grid",
    "services"
  ],
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ]
  },
  "render": "file:./render.php",
  "attributes": {
    "features": {
      "type": "array",
      "default": [
        {
          "id": "1",
          "icon": "âš¡",
          "title": "Lightning Fast",
          "description": "Get results in seconds, not minutes. Our optimized infrastructure ensures peak performance."
        },
        {
          "id": "2",
          "icon": "ðŸ”’",
          "title": "Secure & Reliable",
          "description": "Enterprise-grade security with 99.9% uptime guarantee. Your data is always protected."
        },
        {
          "id": "3",
          "icon": "ðŸ“Š",
          "title": "Powerful Analytics",
          "description": "Deep insights and real-time reporting to help you make data-driven decisions."
        }
      ]
    },
    "columns": {
      "type": "number",
      "default": 3
    },
    "iconStyle": {
      "type": "string",
      "default": "emoji"
    },
    "alignment": {
      "type": "string",
      "default": "center"
    },
    "layout": {
      "type": "string",
      "default": "card"
    },
    "backgroundColor": {
      "type": "string",
      "default": "bg-white"
    },
    "sectionTitle": {
      "type": "string",
      "default": ""
    },
    "sectionSubtitle": {
      "type": "string",
      "default": ""
    },
    "showSection": {
      "type": "boolean",
      "default": false
    },
    "padding": {
      "type": "string",
      "default": "large"
    },
    "settings": {
      "type": "object",
      "default": {
        "spacing": {
          "base": {
            "top": 8,
            "right": 4,
            "bottom": 8,
            "left": 4
          }
        },
        "margins": {
          "base": {
            "top": 0,
            "right": 0,
            "bottom": 0,
            "left": 0
          }
        },
        "typography": {
          "base": {
            "fontSize": "text-base",
            "fontWeight": "font-normal",
            "textAlign": "text-left"
          }
        },
        "backgroundColor": "",
        "textColor": "",
        "gradients": {},
        "layout": {},
        "effects": {}
      }
    },
    "activeDevice": {
      "type": "string",
      "default": "base"
    },
    "gridColumns": {
      "type": "number",
      "default": 3
    },
    "mobileColumns": {
      "type": "number",
      "default": 1
    },
    "tabletColumns": {
      "type": "number",
      "default": 2
    },
    "gridGap": {
      "type": "string",
      "default": "gap-6"
    },
    "showImages": {
      "type": "boolean",
      "default": false
    },
    "showTitles": {
      "type": "boolean",
      "default": true
    },
    "showDescriptions": {
      "type": "boolean",
      "default": true
    },
    "showButtons": {
      "type": "boolean",
      "default": false
    },
    "cardStyle": {
      "type": "string",
      "default": "elevated"
    },
    "imageStyle": {
      "type": "string",
      "default": "rounded"
    },
    "showSectionHeader": {
      "type": "boolean",
      "default": false
    },
    "titleFontSize": {
      "type": "string",
      "default": "text-lg md:text-xl"
    },
    "titleFontWeight": {
      "type": "string",
      "default": "font-semibold"
    },
    "titleColor": {
      "type": "string",
      "default": "text-gray-900"
    },
    "titleHoverColor": {
      "type": "string",
      "default": "group-hover:text-blue-600"
    },
    "titleMarginBottom": {
      "type": "string",
      "default": "mb-3"
    },
    "descriptionColor": {
      "type": "string",
      "default": "text-gray-600"
    },
    "descriptionMarginBottom": {
      "type": "string",
      "default": "mb-4"
    },
    "cardBackground": {
      "type": "string",
      "default": "bg-white"
    },
    "cardBorder": {
      "type": "string",
      "default": "rounded-xl"
    },
    "cardShadow": {
      "type": "string",
      "default": "shadow-lg"
    },
    "cardHoverShadow": {
      "type": "string",
      "default": "hover:shadow-xl"
    },
    "cardPadding": {
      "type": "string",
      "default": "p-6"
    },
    "buttonStyle": {
      "type": "object",
      "default": {
        "backgroundColor": "bg-blue-600",
        "hoverBackgroundColor": "hover:bg-blue-700",
        "textColor": "text-white",
        "padding": "px-4 py-2",
        "fontSize": "text-sm",
        "fontWeight": "font-medium",
        "borderRadius": "rounded-lg"
      }
    },
    "sectionHeaderStyle": {
      "type": "object",
      "default": {
        "titleFontSize": "text-3xl md:text-4xl",
        "titleFontWeight": "font-bold",
        "titleColor": "text-gray-900",
        "titleMarginBottom": "mb-4",
        "subtitleFontSize": "text-lg",
        "subtitleColor": "text-gray-600",
        "subtitleMaxWidth": "max-w-2xl"
      }
    },
    "highlightStyle": {
      "type": "object",
      "default": {
        "backgroundColor": "bg-blue-100",
        "textColor": "text-blue-800",
        "padding": "px-2 py-1",
        "fontSize": "text-xs",
        "borderRadius": "rounded-full"
      }
    },
    "animationSpeed": {
      "type": "string",
      "default": "duration-300"
    },
    "hoverEffects": {
      "type": "boolean",
      "default": true
    }
  },
  "example": {
    "attributes": {
      "sectionTitle": "Why Choose Our Platform",
      "sectionSubtitle": "Everything you need to succeed in one powerful solution",
      "showSection": true
    }
  },
  "textdomain": "tailwind-starter",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}