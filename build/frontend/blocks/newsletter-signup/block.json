{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "tailwind-starter/newsletter-signup",
  "version": "0.1.0",
  "title": "Newsletter Signup",
  "category": "tailwind-starter",
  "icon": "email-alt",
  "description": "Create email subscription forms with various layouts and integration options.",
  "example": {},
  "supports": {
    "html": false,
    "anchor": true,
    "align": [
      "wide",
      "full"
    ]
  },
  "attributes": {
    "layout": {
      "type": "string",
      "default": "inline-form"
    },
    "title": {
      "type": "string",
      "default": "Stay Updated"
    },
    "subtitle": {
      "type": "string",
      "default": "Get the latest news and updates delivered to your inbox"
    },
    "showTitle": {
      "type": "boolean",
      "default": true
    },
    "showSubtitle": {
      "type": "boolean",
      "default": true
    },
    "emailPlaceholder": {
      "type": "string",
      "default": "Enter your email address"
    },
    "namePlaceholder": {
      "type": "string",
      "default": "Enter your name"
    },
    "submitButtonText": {
      "type": "string",
      "default": "Subscribe"
    },
    "successMessage": {
      "type": "string",
      "default": "Thank you for subscribing! Check your email to confirm."
    },
    "errorMessage": {
      "type": "string",
      "default": "Something went wrong. Please try again."
    },
    "privacyText": {
      "type": "string",
      "default": "We respect your privacy. Unsubscribe at any time."
    },
    "showPrivacyText": {
      "type": "boolean",
      "default": true
    },
    "showNameField": {
      "type": "boolean",
      "default": false
    },
    "requireName": {
      "type": "boolean",
      "default": false
    },
    "formAlignment": {
      "type": "string",
      "default": "left"
    },
    "buttonStyle": {
      "type": "string",
      "default": "primary"
    },
    "buttonSize": {
      "type": "string",
      "default": "medium"
    },
    "inputStyle": {
      "type": "string",
      "default": "modern"
    },
    "formLayout": {
      "type": "string",
      "default": "horizontal"
    },
    "enableIcon": {
      "type": "boolean",
      "default": true
    },
    "iconType": {
      "type": "string",
      "default": "email"
    },
    "backgroundColor": {
      "type": "string",
      "default": "#f8fafc"
    },
    "textColor": {
      "type": "string",
      "default": "#1f2937"
    },
    "accentColor": {
      "type": "string",
      "default": "#3b82f6"
    },
    "borderRadius": {
      "type": "number",
      "default": 8
    },
    "enableShadow": {
      "type": "boolean",
      "default": true
    },
    "enableAnimation": {
      "type": "boolean",
      "default": true
    },
    "animationType": {
      "type": "string",
      "default": "slideInUp"
    },
    "modalTrigger": {
      "type": "string",
      "default": "scroll"
    },
    "modalDelay": {
      "type": "number",
      "default": 5000
    },
    "scrollPercentage": {
      "type": "number",
      "default": 50
    },
    "exitIntent": {
      "type": "boolean",
      "default": false
    },
    "modalOverlayOpacity": {
      "type": "number",
      "default": 80
    },
    "enableCloseButton": {
      "type": "boolean",
      "default": true
    },
    "enableEscapeKey": {
      "type": "boolean",
      "default": true
    },
    "showOncePerSession": {
      "type": "boolean",
      "default": true
    },
    "emailService": {
      "type": "string",
      "default": "wordpress"
    },
    "mailchimpApiKey": {
      "type": "string",
      "default": ""
    },
    "mailchimpListId": {
      "type": "string",
      "default": ""
    },
    "convertKitApiKey": {
      "type": "string",
      "default": ""
    },
    "convertKitFormId": {
      "type": "string",
      "default": ""
    },
    "customApiEndpoint": {
      "type": "string",
      "default": ""
    },
    "customApiMethod": {
      "type": "string",
      "default": "POST"
    },
    "enableDoubleOptIn": {
      "type": "boolean",
      "default": true
    },
    "enableGDPRCompliance": {
      "type": "boolean",
      "default": false
    },
    "gdprText": {
      "type": "string",
      "default": "I agree to receive marketing emails"
    },
    "enableHoneypot": {
      "type": "boolean",
      "default": true
    },
    "enableReCaptcha": {
      "type": "boolean",
      "default": false
    },
    "recaptchaSiteKey": {
      "type": "string",
      "default": ""
    },
    "redirectUrl": {
      "type": "string",
      "default": ""
    },
    "enableRedirect": {
      "type": "boolean",
      "default": false
    },
    "tags": {
      "type": "array",
      "default": []
    },
    "customFields": {
      "type": "array",
      "default": []
    },
    "enableAnalytics": {
      "type": "boolean",
      "default": true
    },
    "conversionGoal": {
      "type": "string",
      "default": "newsletter_signup"
    },
    "incentiveType": {
      "type": "string",
      "default": "none"
    },
    "incentiveText": {
      "type": "string",
      "default": "Get our free guide when you subscribe!"
    },
    "incentiveImage": {
      "type": "object",
      "default": {
        "url": "",
        "alt": "Free incentive",
        "id": 0
      }
    },
    "showIncentive": {
      "type": "boolean",
      "default": false
    },
    "socialProof": {
      "type": "object",
      "default": {
        "enabled": false,
        "count": "5,000",
        "text": "subscribers"
      }
    },
    "settings": {
      "type": "object",
      "default": {
        "spacing": {
          "base": {
            "top": 6,
            "right": 4,
            "bottom": 6,
            "left": 4
          }
        },
        "margins": {
          "base": {
            "top": 0,
            "right": 0,
            "bottom": 0,
            "left": 0
          }
        },
        "typography": {
          "base": {
            "fontSize": "text-base",
            "fontWeight": "font-normal",
            "textAlign": "text-left"
          }
        },
        "backgroundColor": "bg-white",
        "textColor": "text-gray-900",
        "gradients": {},
        "layout": {},
        "effects": {}
      }
    },
    "activeDevice": {
      "type": "string",
      "default": "base"
    }
  },
  "textdomain": "tailwind-starter",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "render": "file:./render.php",
  "style": "file:./style-index.css",
  "viewScript": "file:./frontend.js",
  "presets": [
    "accessibility",
    "animations"
  ],
  "assetPriority": "normal"
}