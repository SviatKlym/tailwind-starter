{
  "name": "tailwind-starter",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "wp-scripts start",
    "build": "npm run blocks:build && npm run theme:build",
    "blocks:build": "wp-scripts build",
    "theme:build": "tailwindcss -i src/style.css -o build/main.css --minify && cp src/editor.css build/editor.css && cp src/editor-alignment-fix.css build/editor-alignment-fix.css",
    "clean": "rimraf build"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "@wordpress/scripts": "^30.19.0",
    "rimraf": "^5.0.1",
    "tailwindcss": "^4.1.11"
  },
  "dependencies": {
    "@wordpress/block-editor": "^14.4.0",
    "@wordpress/blocks": "^13.9.0",
    "@wordpress/components": "^28.9.0",
    "@wordpress/compose": "^7.9.0",
    "@wordpress/element": "^6.9.0",
    "@wordpress/hooks": "^4.9.0",
    "@wordpress/i18n": "^5.9.0",
    "ajv": "^8.17.1",
    "lightningcss": "^1.30.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-refresh": "^0.17.0"
  }
}
