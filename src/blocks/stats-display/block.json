{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "tailwind-starter/stats-display",
	"version": "0.1.0",
	"title": "Stats Display",
	"category": "tailwind-starter",
	"icon": "chart-bar",
	"description": "Present key metrics, numbers, or achievements in visually prominent format.",
	"example": {},
	"supports": {
		"html": false,
		"anchor": true
	},
	"attributes": {
		"layout": {
			"type": "string",
			"default": "counter-animation"
		},
		"stats": {
			"type": "array",
			"default": [
				{
					"id": "stat-1",
					"number": "10,000",
					"prefix": "",
					"suffix": "+",
					"label": "Happy Customers",
					"description": "Trusted by businesses worldwide",
					"icon": "üë•",
					"color": "#3b82f6",
					"animationType": "countUp",
					"animationDuration": 2000
				},
				{
					"id": "stat-2",
					"number": "99.9",
					"prefix": "",
					"suffix": "%",
					"label": "Uptime Guarantee",
					"description": "Reliable service you can count on",
					"icon": "‚ö°",
					"color": "#10b981",
					"animationType": "countUp",
					"animationDuration": 2500
				},
				{
					"id": "stat-3",
					"number": "24",
					"prefix": "",
					"suffix": "/7",
					"label": "Support Available",
					"description": "Round-the-clock customer service",
					"icon": "üõ°Ô∏è",
					"color": "#f59e0b",
					"animationType": "countUp",
					"animationDuration": 1500
				},
				{
					"id": "stat-4",
					"number": "500",
					"prefix": "$",
					"suffix": "M+",
					"label": "Revenue Protected",
					"description": "Securing business operations globally",
					"icon": "üí∞",
					"color": "#8b5cf6",
					"animationType": "countUp",
					"animationDuration": 3000
				}
			]
		},
		"columns": {
			"type": "number",
			"default": 4
		},
		"showIcons": {
			"type": "boolean",
			"default": true
		},
		"showDescriptions": {
			"type": "boolean",
			"default": true
		},
		"enableAnimations": {
			"type": "boolean",
			"default": true
		},
		"animationTrigger": {
			"type": "string",
			"default": "scroll"
		},
		"numberSize": {
			"type": "string",
			"default": "large"
		},
		"alignment": {
			"type": "string",
			"default": "center"
		},
		"backgroundColor": {
			"type": "string",
			"default": "#f8fafc"
		},
		"sectionTitle": {
			"type": "string",
			"default": "Trusted by Industry Leaders"
		},
		"sectionSubtitle": {
			"type": "string",
			"default": "Our platform delivers exceptional results that speak for themselves"
		},
		"showSectionHeader": {
			"type": "boolean",
			"default": true
		},
		"highlightedStat": {
			"type": "string",
			"default": "stat-1"
		},
		"cardStyle": {
			"type": "string",
			"default": "clean"
		},
		"settings": {
			"type": "object",
			"default": {
				"spacing": {
					"base": { "top": 8, "right": 4, "bottom": 8, "left": 4 }
				},
				"margins": {
					"base": { "top": 0, "right": 0, "bottom": 0, "left": 0 }
				},
				"typography": {
					"base": { "fontSize": "text-lg", "fontWeight": "font-normal", "textAlign": "text-center" }
				},
				"backgroundColor": "bg-gray-50",
				"textColor": "text-gray-900",
				"gradients": {},
				"layout": {},
				"effects": {}
			}
		},
		"activeDevice": {
			"type": "string",
			"default": "base"
		}
	},
	"textdomain": "tailwind-starter",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
} 