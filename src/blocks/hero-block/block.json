{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "my-tailwind-starter/hero-block",
  "version": "1.0.0",
  "title": "Hero Block",
  "category": "tailwind-starter-hero",
  "icon": "cover-image",
  "description": "A hero section with background image, title, subtitle, and CTA button",
  "keywords": ["hero", "banner", "header", "cta"],
  "supports": {
    "html": false,
    "anchor": true,
    "customClassName": true,
    "spacing": {
      "padding": true,
      "margin": true
    },
    "color": {
      "background": true,
      "text": true,
      "link": true
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "default": "Welcome to Our Amazing Site"
    },
    "subtitle": {
      "type": "string",
      "default": "Discover amazing features and beautiful design with our modern WordPress theme"
    },
    "buttonText": {
      "type": "string",
      "default": "Get Started"
    },
    "buttonUrl": {
      "type": "string",
      "default": ""
    },
    "backgroundImage": {
      "type": "object",
      "default": null
    },
    "overlayOpacity": {
      "type": "number",
      "default": 0.5
    },
    "textAlignment": {
      "type": "string",
      "default": "center"
    }
  },
  "textdomain": "my-tailwind-starter",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css"
}