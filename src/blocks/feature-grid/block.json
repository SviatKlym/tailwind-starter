{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "tailwind-starter/feature-grid",
  "version": "1.0.0",
  "title": "Feature Grid",
  "category": "tailwind-starter",
  "icon": "grid-view",
  "description": "Showcase product features and benefits in an organized grid layout",
  "keywords": ["features", "benefits", "grid", "services"],
  "supports": {
    "html": false,
    "align": ["wide", "full"]
  },
  "attributes": {
    "features": {
      "type": "array",
      "default": [
        {
          "id": "1",
          "icon": "âš¡",
          "title": "Lightning Fast",
          "description": "Get results in seconds, not minutes. Our optimized infrastructure ensures peak performance."
        },
        {
          "id": "2", 
          "icon": "ðŸ”’",
          "title": "Secure & Reliable",
          "description": "Enterprise-grade security with 99.9% uptime guarantee. Your data is always protected."
        },
        {
          "id": "3",
          "icon": "ðŸ“Š",
          "title": "Powerful Analytics",
          "description": "Deep insights and real-time reporting to help you make data-driven decisions."
        }
      ]
    },
    "columns": {
      "type": "number",
      "default": 3
    },
    "iconStyle": {
      "type": "string",
      "default": "emoji"
    },
    "alignment": {
      "type": "string",
      "default": "center"
    },
    "layout": {
      "type": "string",
      "default": "card"
    },
    "backgroundColor": {
      "type": "string",
      "default": "bg-white"
    },
    "sectionTitle": {
      "type": "string",
      "default": ""
    },
    "sectionSubtitle": {
      "type": "string", 
      "default": ""
    },
    "showSection": {
      "type": "boolean",
      "default": false
    },
    "padding": {
      "type": "string",
      "default": "large"
    }
  },
  "example": {
    "attributes": {
      "sectionTitle": "Why Choose Our Platform",
      "sectionSubtitle": "Everything you need to succeed in one powerful solution",
      "showSection": true
    }
  },
  "textdomain": "tailwind-starter",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css"
}